<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="lor.ch.leagueofranks.SummonerProfileActivity"
    tools:showIn="@layout/activity_summoner_profile">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="11dp"
        tools:layout_editor_absoluteY="7dp">

        <TextView
            android:id="@+id/flex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Flex Queue"
            android:textSize="20dp"
            android:layout_below="@+id/solorate"
            android:layout_alignStart="@+id/soloPic" />

        <TextView
            android:id="@+id/normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:text="Normal"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/solo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/soloPic"
            android:layout_below="@+id/normalPic"
            android:layout_marginTop="41dp"
            android:text="Solo/Due Queue"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/normalPic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/normal"
            android:layout_alignStart="@+id/normal"
            android:layout_below="@+id/normal"
            android:layout_marginTop="17dp"
            app:srcCompat="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/soloPic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:layout_below="@+id/solo"
            android:layout_alignStart="@+id/normalPic"
            android:layout_alignEnd="@+id/normalPic" />

        <ImageView
            android:id="@+id/flexPic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:layout_below="@+id/flex"
            android:layout_alignStart="@+id/flex"
            android:layout_alignEnd="@+id/soloPic" />

        <TextView
            android:id="@+id/normalwins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/normalPic"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/normalPic"
            android:layout_marginBottom="28dp"
            android:layout_marginEnd="44dp"
            android:layout_marginStart="31dp"
            android:layout_toEndOf="@+id/normalPic"
            android:text="Wins:" />

        <TextView
            android:id="@+id/level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/solo"
            android:layout_alignEnd="@+id/normalwins"
            android:layout_alignTop="@+id/normalwins"
            android:layout_marginTop="23dp"
            android:layout_toEndOf="@+id/flex"
            android:text="Level: " />

        <TextView
            android:id="@+id/solowins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/normalwins"
            android:layout_alignStart="@+id/normalwins"
            android:layout_alignTop="@+id/soloPic"
            android:text="Wins:" />

        <TextView
            android:id="@+id/flexwins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/solorate"
            android:layout_alignTop="@+id/flexPic"
            android:layout_toEndOf="@+id/flex"
            android:text="Wins:" />

        <TextView
            android:id="@+id/solorate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/soloPic"
            android:layout_alignEnd="@+id/solowins"
            android:layout_alignStart="@+id/solowins"
            android:layout_below="@+id/solowins"
            android:layout_marginTop="11dp"
            android:text="Silver 5LP" />

        <TextView
            android:id="@+id/flexrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/flexPic"
            android:layout_alignEnd="@+id/flexwins"
            android:layout_alignStart="@+id/flexwins"
            android:layout_below="@+id/flexwins"
            android:layout_marginTop="13dp"
            android:text="Silver 5LP" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
