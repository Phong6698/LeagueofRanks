<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="lor.ch.leagueofranks.SummonerProfileActivity"
    tools:showIn="@layout/activity_summoner_profile">

    <RelativeLayout
        android:layout_width="378dp"
        android:layout_height="577dp"
        tools:layout_editor_absoluteX="11dp"
        tools:layout_editor_absoluteY="7dp">

        <TextView
            android:id="@+id/flex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="Flex Queue"
            android:textSize="20dp"
            android:layout_below="@+id/soloduoIcon"
            android:layout_alignStart="@+id/soloduoIcon" />

        <TextView
            android:id="@+id/normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:text="Normal"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/solo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/soloduoIcon"
            android:layout_below="@+id/summonerIcon"
            android:layout_marginTop="41dp"
            android:text="Solo/Due Queue"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/summonerIcon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignStart="@+id/normal"
            android:layout_below="@+id/normal"
            android:layout_marginTop="17dp"
            android:adjustViewBounds="false"
            app:srcCompat="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/soloduoIcon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="14dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:layout_below="@+id/solo"
            android:layout_alignStart="@+id/summonerIcon" />

        <ImageView
            android:id="@+id/flexIcon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="14dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:layout_below="@+id/flex"
            android:layout_alignStart="@+id/flex" />

        <TextView
            android:id="@+id/normalwins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/summonerIcon"
            android:layout_marginEnd="44dp"
            android:layout_marginStart="31dp"
            android:layout_toEndOf="@+id/summonerIcon"
            android:text="Wins:" />

        <TextView
            android:id="@+id/level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level: "
            android:layout_alignTop="@+id/normalwins"
            android:layout_alignStart="@+id/normalwins"
            android:layout_marginTop="31dp" />

        <TextView
            android:id="@+id/solowins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/normalwins"
            android:layout_alignStart="@+id/normalwins"
            android:text="Wins:"
            android:layout_alignTop="@+id/soloduoIcon" />

        <TextView
            android:id="@+id/flexwins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wins:"
            android:layout_alignTop="@+id/flexIcon"
            android:layout_alignStart="@+id/flexrate" />

        <TextView
            android:id="@+id/solorate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Silver 5LP"
            android:layout_below="@+id/solowins"
            android:layout_alignStart="@+id/solowins"
            android:layout_marginTop="11dp" />

        <TextView
            android:id="@+id/flexrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="Silver 5LP"
            android:layout_below="@+id/flexwins"
            android:layout_alignStart="@+id/solorate" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
